@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .search-form {
        width: 100%;
        max-width: 600px;
    }

    .input-group {
        display: flex;
    }

    .search-input {
        flex-grow: 1;
        margin-right: 10px; 
    }

    .search-button {
        flex-shrink: 0;
        background-color: rgb(214, 92, 92); 
        color: white; 
        border: none; 
        padding: 10px 20px;
        cursor: pointer; 
    }

    .search-button:hover {
            background-color: rgb(204, 51, 51); 
     }

    .product-container {
        display: flex;
        flex-wrap: wrap;
        gap: 60px;
        justify-content: center;
    }

    .product-box {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        width: 200px;
        text-align: center;
        background-color: rgb(242, 201, 219);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product-box:hover {
            background-color: rgb(234, 164, 201); 
    }

    .product-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 10px;
    }

    .product-name a {
        color: WHITE;
        text-decoration: none; 
    }

    .product-name a:hover {
         color: black;
    }

    .product-box h3 {
        font-size: 1.2em;
        margin: 10px 0;
    }

    .product-brand, .product-price {
        font-size: 1em;
        margin: 5px 0;
    }
</style>


<div class="search-container">
    <form method="get" class="search-form">
        <div class="input-group">
            <input type="text" class="form-control search-input" asp-for="SearchTerm" placeholder="Search...">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary search-button">Search</button>
            </div>
        </div>
    </form>
</div>

